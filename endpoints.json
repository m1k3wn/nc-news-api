{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "article_id": 1,
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6,
          "article_img_url": "https://images.pexels.com/photos/97050/pexels-photo-97050.jpeg?w=700&h=700"
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "returns article with corresponding article_id",
    "queries": ["article_id"],
    "exampleResponse": [
      {
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "author": "weegembump",
        "body": "Text from the article..",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 0,
        "comment_count": 6
      }
    ]
  },
  "GET /api/articles/:article_id/comments": {
    "description": "Responds with an array of comments for the given article_id",
    "queries": ["article_id"],
    "exampleResponse": [
      {
        "comment_id": 1,
        "votes": 0,
        "created_at": "2018-05-30T15:59:13.341Z",
        "author": "lurker",
        "body": "A comment",
        "article_id": 1
      },
      {
        "comment_id": 2,
        "votes": 1,
        "created_at": "2018-05-30T16:01:15.341Z",
        "author": "icellusedkars",
        "body": "A different comment",
        "article_id": 1
      }
    ]
  },
  "POST /api/articles/:article_id/comments": {
    "description": "Posts new comment and responds with posted comment",
    "queries": ["article_id"],
    "exampleResponse": [
      {
        "comment_id": 1,
        "body": "A comment",
        "votes": 0,
        "author": "lurker",
        "article_id": 1,
        "created_at": "2018-05-30T15:59:13.341Z"
      }
    ]
  }
}
